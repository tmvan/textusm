{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "outDir": "./dist",
    "removeComments": true,
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*", "src/model.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
